{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,                       /* Allows importing .json files */
    "allowSyntheticDefaultImports": true,             /* Helps with JSON default imports */
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@data/*": ["src/data/*"],                         /* Maps to root data folder */
      "@custom_modules/*": ["src/custom_modules/*"],              /* Maps to root utils folder */
      "@config/*": ["config/*"]                      /* Add this alias for your data folder */
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/custom_modules/**/**/*.ts",
    "config/**/*.ts",
    "data/**/*.json",                                /* Include your data files */
    "playwright.config.ts"
  ],
  "exclude": ["node_modules"]
}